<h1>Visits</h1>

<div class="new-button">
  <%= link_to 'New Visit', new_visit_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Customer</th>
      <th>Date of visit</th>
      <th>Household count</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.customer.full_name %></td>
        <td><%= visit.date_of_visit %></td>
        <td><%= visit.household_count.to_i %></td>
        <td><%= visit.notes %></td>
        <td><%= link_to 'Show', visit %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
